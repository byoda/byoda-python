ARG TAG=dev
FROM byoda/byoda-python-web:$TAG

LABEL org.opencontainers.image.authors="steven@byoda.org"

###
### angie bits
###
COPY podserver/files/robots.txt /var/www/wwwroot/
COPY podserver/files/angie.conf /etc/angie/
COPY podserver/files/virtualserver.conf.jinja2 /etc/angie/conf.d/

# Location of htaccess file defined in byoda-python:podserver/bootstrap/angieconfig.py
RUN touch /etc/angie/htaccess.db


COPY podserver/files/config.yml byoda-python/
COPY podserver/files/startup.sh .

COPY . byoda-python/

CMD "/podserver/startup.sh"
