{
    "name": "default",
    "service_id": 0,
    "service_signature": "",
    "version": 0,
    "schema": {
        "$schema": "https://json-schema.org/draft-07/schema#",
        "$id": "https://uuid.services.byoda.net/profile",
        "title": "default service",
        "description": "This is the default service of each network, storing only private data",
        "type": "object",
        "properties": {
            "#encrypted": {
                "encrypted_sharedsecret": "blah"
            },
            "member": {
                "type": "object",
                "#accesscontrol": ["read"],
                "properties": {
                    "memberId": {
                        "type": "string",
                        "description": "Membership UUID"
                    },
                    "joined": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Date & time when the pod became a member of the service"
                    }
                }
            },
            "person": {
                "type": "object",
                "#accesscontrol": [
                    {
                        "member": ["read", "update", "delete"]
                    }
                ],
                "properties": {
                  "memberId": {
                        "type": "string",
                        "description": "Membership UUID"
                  },
                  "givenName": {
                        "type": "string",
                        "access": "private",
                        "description": "Your first given name"
                    },
                    "additionalNames": {
                        "type": "string",
                        "access": "private",
                        "description": "Any middle names"
                    },
                    "familyName": {
                        "type": "string",
                        "access": "private",
                        "description": "Your surname"
                    },
                    "email": {
                        "type": "string",
                        "format": "idn-email",
                        "access": "private"
                    },
                    "homepageUrl": {
                        "type": "string",
                        "access": "private"
                    },
                    "avatarUrl": {
                        "type": "string",
                        "access": "private"
                    }
                }
            }
        }
    }
}